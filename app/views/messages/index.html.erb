<div class="panel panel-default">
  <div class="panel-heading" style="text-align: center" style="font-size: 50px"  >
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group">
  <label class="control-label col-lg-1" >名前:</label>
  <div class="col-lg-5">
  <%= f.text_field :name, :placeholder =>"名前を入れてください", :class => "form-control" %>
  </div>
    </div>
  
  <div class="form-group">
  <label class="control-label col-lg-1">内容:</label>
  <div class="col-lg-10">
  <%= f.text_area :body, :maxlength => "1000", :size => "140x5", :placeholder =>"投稿内容を記入してください", :class =>"form-control" %>
  </div>
  </div>
  
  
<br>
  <%= f.submit "書き込む", class: "btn btn-lg btn-primary btn-block " %>
<% end %>